<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title>MyJournal | Articles</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container mx-auto">
        <a class="navbar-brand" href="/"
          >My <strong class="text-primary">Journal</strong></a
        >
      </div>
    </nav>
    <div class="container mx-auto py-4">
      <div class="mb-2 text-end">
        <a class="btn btn-primary" href="/add"> Add article </a>
      </div>
      <ul class="list-group list-group-flush">
        <% data.forEach(function(article){ %>
        <li class="list-group-item px-0">
          <h4 class="text-primary fw-bolder">
            <a
              class="link-underline link-underline-opacity-0 link-underline-opacity-75-hover"
              href="/<%= article.id %>"
              ><%= article.title %></a
            >
          </h4>
          <p class="text-secondary mb-0">
            <small><%= article.createdAt.toDateString() %></small>
          </p>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
